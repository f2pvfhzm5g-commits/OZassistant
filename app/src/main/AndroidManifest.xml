<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oz.assistant">

    <!-- Разрешение на overlay -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <!-- Разрешение на работу foreground service (на будущее) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:label="OZ Assistant"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OZAssistant">

        <!-- Главная Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:excludeFromRecents="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <!-- Accessibility Service (пока файла нет, мы его создадим позже) -->
        <service
            android:name=".accessibility.BotAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_config"/>

        </service>

        <!-- Overlay Service (тоже создадим позже) -->
        <service
            android:name=".overlay.OverlayService"
            android:exported="false"/>

    </application>

</manifest>
